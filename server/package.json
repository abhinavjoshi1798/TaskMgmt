{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "server": "nodemon ./dist/index.js",
    "watch": "tsc -w",
    "build": "tsc && npm run copy-files",
    "redis:up": "docker-compose -f ../docker-compose.yml up -d redis",
    "redis:down": "docker-compose -f ../docker-compose.yml down redis",
    "redis:wait": "node -e \"const net = require('net'); let attempts = 0; const maxAttempts = 30; const check = () => { attempts++; const client = net.createConnection(6379, 'localhost', () => { console.log('✓ Redis is ready'); client.end(); process.exit(0); }); client.on('error', () => { if (attempts >= maxAttempts) { console.error('✗ Redis failed to start after 30 attempts'); process.exit(1); } setTimeout(check, 1000); }); }; check();\"",
    "predev": "npm run redis:up && npm run redis:wait",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
    "copy-files": "copyfiles -u 1 \"src/views/**/*\" \"dist/\"",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express-fileupload": "^1.5.1",
    "@types/express-validator": "^2.20.33",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "express-fileupload": "^1.5.2",
    "express-validator": "^7.3.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.1",
    "nodemailer": "^7.0.12",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/nodemailer": "^7.0.4",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  }
}
